<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/space_2x"
    android:paddingBottom="@dimen/space_2x"
    android:background="@drawable/filter_item_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        style="@style/basic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/name" />

    <ImageView
        android:id="@+id/iv_is_selected"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/check_mark_icon"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:tint="@color/basic_color" />


</androidx.constraintlayout.widget.ConstraintLayout>