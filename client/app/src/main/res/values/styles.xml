<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basic_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="translucent_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="basic_white_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BookDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="black_style_roboto_text">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="light_style_roboto_text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tag_text_view">
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space_2x</item>
        <item name="android:paddingRight">@dimen/space_2x</item>
        <item name="android:paddingTop">@dimen/space_05x</item>
        <item name="android:paddingBottom">@dimen/space_05x</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorBackground">@color/basic_color</item>
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/basic_color</item>
    </style>

    <style name="confirm_code_edit_text">
        <item name="android:backgroundTint">@color/basic_color</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ems">1</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">40sp</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>