<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basic_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="translucent_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="basic_white_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BookDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="black_style_roboto_text">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="light_style_roboto_text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>